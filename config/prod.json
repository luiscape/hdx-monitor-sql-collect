        { "field_name": "number_of_edits", "type": "INTEGER" },
        { "field_name": "fullname", "type": "TEXT" },
        { "field_name": "id", "type": "TEXT" },
        { "field_name": "number_created_packages", "type": "INTEGER" }
     ]
